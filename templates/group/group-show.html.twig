{% extends 'layouts/master.html.twig' %}

{% block metatitle %}Group{% endblock %}

{% block main %}
    <a class="btn bg-fusion-400" style="width:8%;" href="{{app.request.headers.get('referer')}}">Volver</a>
    <h1>Group</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ group.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ group.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ group.description }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
