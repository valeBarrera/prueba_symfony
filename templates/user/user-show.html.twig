{% extends 'layouts/master.html.twig' %}

{% block metatitle %}User{% endblock %}

{% block main %}
    <a class="btn bg-fusion-400" style="width:8%;" href="{{app.request.headers.get('referer')}}">Volver</a>
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
